<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
          http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camelContext xmlns="http://camel.apache.org/schema/spring">
		<route id="simple-timer-1">
			<from uri="quartz2://myGroupName/myTimerName?cron=0+*/3+*+*+*+?"/>
			<log message="program start"/>
			<doTry>
				<to uri="direct:putlog"/>
				<doCatch>
					<exception>org.apache.camel.http.common.HttpOperationFailedException</exception>
					<exception>java.lang.IllegalStateException</exception>
					<log message="file get failed"/>
				</doCatch>
			</doTry>
			<log message="complete!"/>
		</route>

		<route id="simple-timer-2">
			<from uri="direct:putlog"/>
			<to uri="mock:hogehoge" />
			<log message="simple-timer-2:complete!"/>
		</route>

	</camelContext>
</beans>
